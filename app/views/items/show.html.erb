<h1>SHOW DETAIL about one Item</h1>
<h2> <%= @item.description %> </h2>


<div class="jumbotron">
	<%= @item.title %> -> <%= @item.price %> <br>

	<% if user_signed_in? %>
		<a class="btn btn-success" href="/items/add/<%= @item.id %>">ADD TO BASKET</a>
	<% else %>
		<a class="btn btn-success" href="<%= new_user_registration_path %>">GO REGISTER</a>
	<% end %>
</div>
