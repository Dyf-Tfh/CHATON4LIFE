<h1>Catalogue des items</h1>

<% @items.each do |item| %>
<div class="row mb-4">
  <div class="card w-50 bg-light">
    <div class="card-body">
      <h2 class="card-title"><%= item.title %></h2>
      <div class="row">
        <div class="col-6">
          <%= image_tag(item.image_url, width: "200") %>
        </div>
        <div class="col-6">
          <div class="card-text"><%= item.description %></div>
        </div>
      </div>
    </div>
    <div class="card-footer text-center font-weight-bold">
      <%= number_to_currency product.price, unit: 'â‚¬', separator: ',', format: '%n %u' %>
      <%= button_to 'Ajouter au panier', line_items_path(product_id: product), class: 'btn btn-primary' %>
    </div>
  </div>
</div>
<% end %>
