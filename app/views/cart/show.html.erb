<% a = 0 %>
<ol>
<% @cart.items.each do |item| %>
<li>
  <%= item.title %><br>
  <%= item.description %><br>
  $<%= item.price %>
  <% a += item.price %>
  <%= link_to  "Supprimer l'article", mon_panier_delete_path(id: @cart.id,item: item.id), method: :delete %>
</li>
<% end %>
</ol>
<p> Prix total: $<%= a %></p>
